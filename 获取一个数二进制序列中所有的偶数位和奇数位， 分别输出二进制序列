#include <stdio.h>
#pragma warning(disable :4996)
int main()
{
	int num = 0;
	int i = 0;
	printf("Please Enter Number :" );
	scanf("%d", &num);
	printf("奇数序列为：\n");
	for (i = 31; i > 0; i -= 2)
	{
		printf("%d", (num >> i) & 1);
	}printf("\n");
	printf("偶数序列为：\n");
	for (i = 30; i >= 0; i -= 2)
	{
		printf("%d", (num >> i) & 1);
	}
	return 0;
}
